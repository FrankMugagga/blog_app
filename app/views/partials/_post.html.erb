<div class='post_cont'>

<a class='post_link' href='/users/<%= @user.id %>/posts/<%= post.id %>'>
  <h2 class='post_id'>
    Post <%= post.id %>
  </h2>
  <div class='post_title'>
    Post Text:<%= post.title %>
  </div>
  <div class='post_text'>
    Post Text:<%= post.text %>
  </div>

  <div class='comment_like'>
    <div class='comment'>
      Comments: <%= post.comments_counter %>
    </div>
    <div class='like'>
      Likes: <%= post.likes_counter%>
    </div>
  </div>
</a>
  <a href='/users/<%= @user.id %>/posts/<%= post.id %>/comments/new' class='add_comment'>Add Comment</a>
  


  




</div>
